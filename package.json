{
  "name": "node-http-boilerplate",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build": "tsup",
    "dev": "tsx watch --env-file=.env ./src/infra/server.ts",
    "debug": "tsx watch --env-file=.env --inspect-brk ./src/infra/server.ts",
    "format": "biome check --apply src",
    "test": "pnpm run test:unit && pnpm run test:int",
    "test:unit": "vitest run --c ./test/vitest.config-unit.ts",
    "test:int": "vitest run --c ./test/vitest.config-int.ts",
    "test:coverage": "vitest run --c ./test/vitest.config-int.ts --coverage",
    "migration:up": "tsx --env-file=.env ./src/infra/database/migrator up",
    "migration:down": "tsx --env-file=.env ./src/infra/database/migrator down",
    "migration:create": "tsx --env-file=.env ./src/infra/database/migrator create",
    "migration:redo": "tsx --env-file=.env ./src/infra/database/migrator redo",
    "migration:down-all": "tsx --env-file=.env ./src/infra/database/migrator down:all"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@biomejs/biome": "1.6.0",
    "@swc/core": "^1.4.6",
    "@types/node": "^20.11.25",
    "@types/pg": "^8.11.2",
    "@vitest/coverage-v8": "^1.3.1",
    "esbuild": "^0.20.1",
    "tsup": "^8.0.2",
    "tsx": "^4.7.1",
    "typescript": "^5.4.2",
    "vitest": "^1.3.1",
    "vitest-mock-extended": "^1.3.1"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/request-context": "^5.1.0",
    "@fastify/sensible": "^5.5.0",
    "@fastify/swagger": "^8.14.0",
    "@fastify/type-provider-typebox": "^4.0.0",
    "@sinclair/typebox": "^0.32.15",
    "commander": "^12.0.0",
    "env-var": "^7.4.1",
    "fastify": "^4.26.2",
    "http-status-codes": "^2.3.0",
    "kysely": "^0.27.3",
    "pg": "^8.11.3",
    "pino": "^8.19.0"
  }
}
